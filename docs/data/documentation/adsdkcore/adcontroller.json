ner ad,"},{"text":" ","type":"text"},{"type":"text","text":"the controller is responsible for processing the data, updating the "},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerState","isActive":true,"type":"reference"},{"text":" ","type":"text"},{"text":"for ","type":"text"},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/Advertisement","isActive":true,"type":"reference"},{"type":"text","text":", notify about "},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerEvent","type":"reference","isActive":true},{"text":" from renderer,","type":"text"},{"text":" ","type":"text"},{"text":"and filling the renderer with content.","type":"text"}]},{"inlineContent":[{"text":"Example of creating a controller:","type":"text"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    \/\/ MARK: - Internal Properties","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    \/\/ MARK: - Private Properties","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    \/\/ MARK: - Init","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data, _ metadata: AdMetadata) {","        \/\/ ...","        \/\/ Decode and process data somehow","        \/\/ ...","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self, weak metadata] data in","            self?.imageData = data","","            \/\/ Optionally, you can pass some information from","            \/\/ the renderer via metadata.","            metadata?.rendererMetadata = [\"myCustomKey\": \"myCustomData\"]","            self?.stateSubject.send(.readyToPresent)","        }","    }","","    func layoutDidChange(visibility: Int) {","        \/\/ Optionally, you can react to changes in the AdView in some way.","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"]}]}],"hierarchy":{"paths":[["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore"]]},"sections":[],"abstract":[{"type":"text","text":"Controller interface for custom renderer."}],"metadata":{"modules":[{"name":"AdSDKCore"}],"symbolKind":"protocol","role":"symbol","externalID":"s:9AdSDKCore0A10ControllerP","fragments":[{"text":"protocol","kind":"keyword"},{"kind":"text","text":" "},{"kind":"identifier","text":"AdController"}],"title":"AdController","navigatorTitle":[{"text":"AdController","kind":"identifier"}],"roleHeading":"Protocol"},"seeAlsoSections":[{"title":"Creating Custom Native Ad","generated":true,"identifiers":["d