nce"},{"type":"text","text":" protocol."},{"text":" ","type":"text"},{"text":"Renderer cannot exist without a controller, so when designing the renderer, you must specify the","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"specific type of controller to be used."}],"type":"paragraph"},{"inlineContent":[{"text":"If the ","type":"text"},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdRenderer","isActive":true},{"type":"text","text":" is responsible for presenting the banner ad,"},{"type":"text","text":" "},{"type":"text","text":"the controller is responsible for processing the data, updating the "},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerState","isActive":true},{"text":" ","type":"text"},{"type":"text","text":"for "},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/Advertisement","isActive":true,"type":"reference"},{"text":", notify about ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerEvent"},{"type":"text","text":" from renderer,"},{"text":" ","type":"text"},{"text":"and filling the renderer with content.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Example of creating a controller:"}],"type":"paragraph"},{"syntax":"swift","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    \/\/ MARK: - Internal Properties","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    \/\/ MARK: - Private Properties","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    \/\/ MARK: - Init","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data) {","        \/\/ Decode and process data somehow","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self] data in","            self?.imageData = data","","            \/\/ Also, you can pass metadata as a parameter to readyToPresent.","            self?.stateSubject.send(.readyToPresent())","        }","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"],"type":"codeListing"}]}],"references":{"doc://com.adsdk.core/documentation/AdSDKCore":{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore","abstract":[{"text":"This module contains the Adition AdSDK for iOS.","type":"text"}],"role":"collection","url":"\/documentation\/adsdkcore","kind":"symbol","title":"AdSDKCore","type":"topic"},"doc://com.adsdk.core/documentation/AdSDKCore/AdControllerEvent":{"kind":"sym