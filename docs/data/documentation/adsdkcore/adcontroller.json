Value: { [weak self, weak metadata] data in","            self?.imageData = data","","            \/\/ Optionally, you can pass some information from","            \/\/ the renderer via metadata.","            metadata?.rendererMetadata = [\"myCustomKey\": \"myCustomData\"]","            self?.stateSubject.send(.readyToPresent)","        }","    }","","    func layoutDidChange(visibility: Int) {","        \/\/ Optionally, you can react to changes in the AdView in some way.","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"],"syntax":"swift","type":"codeListing"}]}],"kind":"symbol","abstract":[{"type":"text","text":"Controller interface for custom renderer."}],"seeAlsoSections":[{"generated":true,"title":"Creating Custom Native Ad","identifiers":["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdRenderer","doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerState","doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerEvent","doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdService\/registerRenderer(_:forName:)","doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdService\/unregisterRenderer(forName:)"]}],"metadata":{"role":"symbol","title":"AdController","fragments":[{"text":"protocol","kind":"keyword"},{"kind":"text","text":" "},{"text":"AdController","kind":"identifier"}],"roleHeading":"Protocol","modules":[{"name":"AdSDKCore"}],"symbolKind":"protocol","externalID":"s:9AdSDKCore0A10ControllerP","navigatorTitle":[{"kind":"ide