s":["iOS"],"languages":["swift"]}]},{"content":[{"level":2,"text":"Overview","type":"heading","anchor":"overview"},{"type":"paragraph","inlineContent":[{"text":"You can create custom views to display advertisements. To do so, your view must follow ","type":"text"},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdRenderer","type":"reference","isActive":true},{"type":"text","text":" protocol."},{"text":" ","type":"text"},{"text":"Renderer cannot exist without a controller, so when designing the renderer, you must specify the","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"specific type of controller to be used."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"If the "},{"isActive":true,"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdRenderer"},{"text":" is responsible for presenting the banner ad,","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"the controller is responsible for processing the data, updating the "},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerState","isActive":true},{"type":"text","text":" "},{"type":"text","text":"for "},{"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/Advertisement","type":"reference","isActive":true},{"type":"text","text":", notify about "},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerEvent","isActive":true},{"type":"text","text":" from renderer,"},{"type":"text","text":" "},{"type":"text","text":"and filling the renderer with content."}]},{"inlineContent":[{"type":"text","text":"Example of creating a controller:"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data, _ metadata: AdMetadata) {","        \/\/ ...","        \/\/ Decode and process data somehow","        \/\/ ...","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self, weak metadata] data in","            self?.imageData = data","","            \/\/ Optionally, you can pass some information from","            \/\/ the renderer via metadata.","            metadata?.rendererMetadata = [\"myCustomKey\": \"myCustomData\"]","            self?.stateSubject.send(.readyToPresent)","        }","    }","","    func layoutDidChange(visibility: Int) {","        \/\/ Optionally, you can react to changes in the AdView in some way.","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"]}],"kind":"content"}],"kind":"symbol","variants":[{"paths":["\/documentation\/adsdkcore\/adcontroller"],"traits":[{"interfaceLanguage":"swift"}]}],"hierarchy":{"paths":[["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore"]]},"references":{"doc://com.adsdk.core/documentation/AdSDKCore/AdService/unregisterRenderer(forName:)":{"url":"\/documentation\/adsdkcore\/adservice\/unregisterrenderer(forname:)","role":"symbol","abstract":[{"text":"Unregisters the custom ad renderer.","type":"text"}],"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdService\/unregisterRenderer(forName:)","fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"unregisterRenderer"},{"text":"(","kind":"text"},{"kind":"externalParam","text":"forName"},{"text":": ","kind":"text"},{"text":"String","kind":"typeIdentifier","preciseIdentifier":"s:SS"},{"text":")","kind":"text"}],"kind":"symbol","type":"topic","title":"unregisterRenderer(forName:)"},"doc://com.adsdk.core/documentation/AdSDKCore/AdController/update(_:_:)":{"kind":"symbol","url":"\/documentation\/adsdkcore\/adcontroller\/update(_:_:)","required":true,"role":"symbol","fragments":[{"kind":"keyword","text":"func"},{"text":" ","kind":"text"},{"text":"update","kind":"identifier"},{"kind":"text","text":"("},{"text":"Data","preciseIdentifier":"s:10Foundation4DataV","kind":"typeIdentifier"},{"text":", ","kind":"text"},{"preciseIdentifier":"s:9AdSDKCore0A8MetadataC","text":"AdMetadata","kind":"typeIdentifier"},{"text":")","kind":"text"}],"abstract":[{"text":"Passes new data received from the server to the controller.","type":"text"}],"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/update(_:_:)","title":"update(_:_:)","type":"topic"},"doc://com.adsdk.core/documentation/AdSDKCore":{"type":"topi