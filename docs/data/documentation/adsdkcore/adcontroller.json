l."},{"text":" ","type":"text"},{"text":"Renderer cannot exist without a controller, so when designing the renderer, you must specify the","type":"text"},{"text":" ","type":"text"},{"text":"specific type of controller to be used.","type":"text"}],"type":"paragraph"},{"type":"paragraph","inlineContent":[{"text":"If the ","type":"text"},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdRenderer","isActive":true},{"type":"text","text":" is responsible for presenting the banner ad,"},{"type":"text","text":" "},{"text":"the controller is responsible for processing the data, updating the ","type":"text"},{"isActive":true,"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerState","type":"reference"},{"type":"text","text":" "},{"type":"text","text":"for "},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/Advertisement","isActive":true},{"text":", notify about ","type":"text"},{"type":"reference","identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdControllerEvent","isActive":true},{"text":" from renderer,","type":"text"},{"text":" ","type":"text"},{"text":"and filling the renderer with content.","type":"text"}]},{"type":"paragraph","inlineContent":[{"text":"Example of creating a controller:","type":"text"}]},{"type":"codeListing","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    \/\/ MARK: - Internal Properties","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    \/\/ MARK: - Private Properties","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    \/\/ MARK: - Init","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data, _ metadata: AdMetadata) {","        \/\/ ...","        \/\/ Decode and process data somehow","        \/\/ ...","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self, weak metadata] data in","            self?.imageData = data","","            \/\/ Optionally, you can pass some information from","            \/\/ the renderer via metadata.","            metadata?.rendererMetadata = [\"myCustomKey\": \"myCustomData\"]","            self?.stateSubject.send(.readyToPresent)","        }","    }","","    func layoutDidChange(visibility: Int) {","        \/\/ Optionally, you can react to changes in the AdView in some way.","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"],"syntax":"swift"}],"kind":"content"}],"seeAlsoSections":[{"title":"Creating Custom Native Ad","identifiers":["doc:\/\/com.adsdk.core\