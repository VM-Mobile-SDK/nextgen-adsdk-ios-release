"type":"codeListing","syntax":"swift","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    \/\/ MARK: - Internal Properties","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    \/\/ MARK: - Private Properties","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    \/\/ MARK: - Init","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data, _ metadata: AdMetadata) {","        \/\/ ...","        \/\/ Decode and process data somehow","        \/\/ ...","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self, weak metadata] data in","            self?.imageData = data","","            \/\/ Optionally, you can pass some information from","            \/\/ the renderer via metadata.","            metadata?.rendererMetadata = [\"myCustomKey\": \"myCustomData\"]","            self?.stateSubject.send(.readyToPresent)","        }","    }","","    func layoutDidChange(visibility: Int) {","        \/\/ Optionally, you can react to changes in the AdView in some way.","    }","","    func h