swift","code":["final class MyController: ObservableObject, AdController {","    typealias Renderer = MyRenderer","","    \/\/ MARK: - Internal Properties","    @Published var imageData: Data?","","    private(set) lazy var state = stateSubject.eraseToAnyPublisher()","    private(set) lazy var event = eventSubject.eraseToAnyPublisher()","","    \/\/ MARK: - Private Properties","    private let stateSubject = PassthroughSubject<AdControllerState, Never>()","    private let eventSubject = PassthroughSubject<AdControllerEvent, Never>()","    private let assetRepository: AssetRepository","    private var subscription: AnyCancellable?","","    \/\/ MARK: - Init","    init(_ assetRepository: AssetRepository) {","        self.assetRepository = assetRepository","        \/\/ ...","    }","","    func update(_ data: Data) {","        \/\/ Decode and process data somehow","        subscription = assetRepository.loadAssets(","            [decodedAssetRequest],","            stateSubject: stateSubject","        )","        .tryMap { asset -> Data in","            guard let image = asset.first?.data else {","                throw AdError.decoding","            }","","            return image","        }","        .sink { [weak self] completion in","            guard case .failure(let error) = completion else { return }","","            self?.stateSubject.send(.error(error))","","        } receiveValue: { [weak self] data in","            self?.imageData = data","","            \/\/ Also, you can pass metadata as a parameter to readyToPresent.","            self?.stateSubject.send(.readyToPresent())","        }","    }","","    func handleTap() {","        eventSubject.send(.tap)","    }","}","","struct MyRenderer: View, AdRenderer {","    @StateObject private var controller: MyController","","    init(controller: MyController) {","        _controller = StateObject(wrappedValue: controller)","    }","","    var body: some View {","        if let data = controller.imageData,","           let image = UIImage(data: data) {","            Image(uiImage: image)","                .onTapGesture {","                    controller.handleTap()","                }","        }","    }","}"]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"variants":[{"paths":["\/documentation\/adsdkcore\/adcontroller"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"url":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController","interfaceLanguage":"swift"},"abstract":[{"type":"text","text":"Controller interface for custom renderer."}],"kind":"symbol","metadata":{"fragments":[{"kind":"keyword","text":"protocol"},{"kind":"text","text":" "},{"kind":"identifier","text":"AdController"}],"title":"AdController","roleHeading":"Protocol","role":"symbol","symbolKind":"protocol","externalID":"s:9AdSDKCore0A10ControllerP","modules":[{"name":"AdSDKCore"}],"navigatorTitle":[{"kind":"identifier","text":"AdController"}]},"hierarchy":{"paths":[["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore"]]},"topicSections":[{"title":"Associated Types","identifiers":["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/Renderer"]},{"title":"Initializers","identifiers":["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/init(_:)"]},{"title":"Instance Properties","identifiers":["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/event","doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/state"]},{"title":"Instance Methods","identifiers":["doc:\/\/com.adsdk.core\/documentation\/AdSDKCore\/AdController\/update(_:)"]}],"references":{"doc://com.adsdk.core/documentation/AdSDKCore":{"role":"collection","title":"AdSDKCore","abstract":[{"type":"text","text":"This module contains the Adition AdSDK for iOS."}],"identifier":"doc:\/\/com.adsdk.core\/documentation\/AdSDKCore","kind":"symbol","type":"topic","url":"\/documentation\/adsdkcore"},"doc://com.adsdk.core/documentation/AdSDKCore/AdRenderer":{"role":"symbol","title":"Ad